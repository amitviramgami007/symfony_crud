{% extends 'base.html.twig' %}

{% block title %} Task List {% endblock %}

{% block body %}
    {% if tasks %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.name }}</td>
                        <td>{{ task.description }}</td>
                        <td>
                            <a href="/task/{{ task.id }}" class="btn btn-dark">Show</a>
                            <a href="/task/edit/{{ task.id }}" class="btn btn-info">Edit</a>
                            <a href="/task/delete/{{ task.id }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No tasks to display</p>
    {% endif %}
{% endblock %}